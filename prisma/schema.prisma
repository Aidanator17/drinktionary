// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  firstName   String
  lastName    String
  email       String @unique
  password    String @unique
  method      String
  role        String
  imageURL    String
  pantry      String[]

  @@map(name: "users")
}

model Recipe {
  id          String @id @default(uuid())
  name        String
  difficulty  String
  ingredients String[]
  directions  String[]

  @@map(name: "recipes")
}

model PantryItems {
  id        String @id @default(uuid())
  name      String
  imageURL  String

  @@map(name:"pantryitems")
}