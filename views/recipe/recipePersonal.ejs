<h2>Your Recipes</h2>
<% if (recipes_name.length == 0){ %>
    <p>There are not enough items in your pantry to make any drink recipes! Add some more <a href="/pantry/add">here</a></p>
    <%}else{ %> 
<p>These are the recipes you can make based off the items in <a href="/pantry/view">your pantry</a>!</p>
<span class="custom-control custom-switch">
    <input type="checkbox" class="custom-control-input" id="customSwitch1" oninput="swap_sort()">
    <label class="custom-control-label" for="customSwitch1">Sort by difficulty</label>
</span>
<div id="recipes_name">
    <% for (drink in recipes_name){ %>
        <div class="recipelist">
            <img width="64px" height="64px" src="<%= recipes_name[drink].imageURL %>">
            <div>
                <a href="/recipe/view/<%= recipes_name[drink].id %>">
                    <h5>
                        <%= recipes_name[drink].name %>
                    </h5>
                </a>
                <p style="margin-bottom: 8px;">Difficulty: <%= recipes_name[drink].difficulty %>
                </p>
            </div>
        </div>
        <% } %>
</div>
<div id="recipes_diff" style="display: none;">
    <% for (drink in recipes_diff){ %>
        <div class="recipelist">
            <img width="64px" height="64px" src="<%= recipes_diff[drink].imageURL %>">
            <div>
                <a href="/recipe/view/<%= recipes_diff[drink].id %>">
                    <h5>
                        <%= recipes_diff[drink].name %>
                    </h5>
                </a>
                <p style="margin-bottom: 8px;">Difficulty: <%= recipes_diff[drink].difficulty %>
                </p>
            </div>
        </div>
        <% } %>
</div> <% } %> 
<script>
    const swap_sort = () => {
        let recipes_diff = document.getElementById("recipes_diff")
        let recipes_name = document.getElementById("recipes_name")
        if (recipes_diff.style.display == "none") {
            recipes_diff.style.display = "";
            recipes_name.style.display = "none";
        }
        else {
            recipes_name.style.display = "";
            recipes_diff.style.display = "none";
        }
    }
</script>